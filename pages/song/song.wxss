.search_box{
  height: 54px;
}
.search_conter{
  width: calc(100% - 24px);
  height: 34px;
  border-radius: 17px;
}
.swiper_banner{
  padding: 0 12px;
}
.banner_tag{
  bottom: 0;
  right: 0;
  width: auto;
  padding: 4px 8px;
  border-radius: 8px 0 0 0;
}
.scroll_icon{
  height: 74px;
  padding-top: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(50,50,50,0.1);
}
.icon_enter{
  height: 74px;
  width: 68px;
  flex-shrink: 0;
}
.icon_enter_bg{
  height: 50px;
  width: 50px;
  margin-bottom: 8px;
  background-color: #33CC99;
}
.scroll_song{
  height: 142px;
  padding-bottom: 12px;
  padding-left: 7px;
  margin-bottom: 10px;
  border-radius: 0 0 10px 10px;
}
.song_list_conter{
  width: 100px;
  height: 142px;
  flex-shrink: 0;
  padding: 5px 6px;
}
.song_list_main{
  width: 100px;
  height: 100px;
}
.song_play_num{
  top: 5px;
  right: 5px;
  padding: 3px 5px;
  background-color: rgba(0,0,0,.1);
  border-radius: 11px;
}
.swiper_music{
  height: 240px;
  margin-bottom: 10px;
}
.music_conter{
  height: calc(100% / 3);
}
.music_row{
  flex: 1;
  padding-left: 12px;
  box-sizing: border-box;
}
.row_img_box{
  width: 90px;
  height: 100%;
}
.row_left{
  width: 75px;
  height: 100%;
}
.row_img{
  width: 75px;
  height: 70px;
}
.row_text{
  width: calc(100% - 100px);
  height: 100%;
}
.swiper_ranking{
  height: 240px;
}
.ranking_box{
  width: 95%;
  height: calc(100% - 30px);
  margin: 10px 0 0 10px;
  box-shadow: 0 0 10px rgba(0,0,0,.2);
}
.ranking_title{
  height: 40px;
}
.ranking_main{
  height: calc(100% - 70px);
}
.ranking_item{
  width: calc(100% - 12px);
  height: calc(100% / 3);
  margin-left: 12px;
}
.ranking_icon_box{
  width: 30px;
  height: 100%;
  justify-content: space-around;
}
.ranking_text{
  width: calc(100% - 50px);
  height: 100%;
}
.details{
  height: 30px;
}
.footer{
  height: 50px;
}