/*****************************公共css部分 ************************************/

/*全局设置所有页面属性*/
page {
  background-color: #FFFFFF;
  font-size: 12px;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #000000;
}
cover-view{
  white-space: normal;
}
image {
  width: 100%;
  height: 100%;
}
/*text可复制类颜色*/
text {
  color: #000000;
}
/* 需要转码文本（行数间需要空格则后台转码div便签间加<br />）*/
rich-text {
  color: #000000;
}
input {
  color: #000000;
}
textarea {
  color: #000000;
  width: 100%;
}
/*表单placeholder默认样式*/
.input-placeholder {
  color: #8E8E93;
}
/* 清空button样式 */
button {
  margin:0;
  padding:0;
  line-height:staic;
}
/* 处理button默认边框 */
button:after{
  border:none;
} 
/*按钮不可点击时的默认样式*/
button[disabled] {
  background-color: #D0CBC5!important;
  color: #ECE9E6!important;
}
/* 浮动和清除 */
.fl{
  float: left;
}
.fr{
  float: right;
}
.clear_f:after{
  content:"";        
  display:block;        
  height:0;        
  clear:both;        
  visibility:hidden;        
}
/* 文字对齐 */
.text_c{
  text-align: center;
}
.text_l{
  text-align: left;
}
.text_r{
  text-align: right;
}
/* 文字删除线 */
.del_line{
  text-decoration:line-through;
}
/* 文字颜色 */
.black_low{
  color: #4A4A4A;
}
.gray{
  color: #666666;
}
.gray_low{
  color: #8E8E93;
}
.red{
  color: #FA5757;
}
.blue{
  color: #41A1FF;
}
.blue_low{
  color: #76ACFF;
}
.white{
  color: #FFFFFF;
}
/* 字体大小 */
.ft10{
  font-size: 10px;
}
.ft12{
  font-size: 12px;
}
.ft13{
  font-size: 13px;
}
.ft14{
  font-size: 14px;
}
.ft15{
  font-size: 15px;
}
.ft16{
  font-size: 16px;
}
.ft18{
  font-size: 18px;
}
/* 字体粗细 */
.fw600{
  font-weight: 600;
}
/* 行高 */
.lh16{
  line-height: 16px;
}
.lh17{
  line-height: 17px;
}
.lh18{
  line-height: 18px;
}
.lh20{
  line-height: 20px;
}
.lh22{
  line-height: 22px;
}
.lh24{
  line-height: 24px;
}
/* 自动换行 */
.wb{
  word-break:break-all
}
/* 单行文本省略号 */
.omit{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.omit2{
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
/* 圆角 */
.br2{
  border-radius: 2px;
}
.br4{
  border-radius: 4px;
}
.br8{
  border-radius: 8px;
}
.br50{
  border-radius: 50%;
}
/* 定位 */
.pa{
  position: absolute;
}
.pr{
  position: relative;
}
.pf{
  position: fixed;
}
/* z-index层级 */
.z9{
  z-index: 9;
}
.z99{
  z-index: 99;
}
.z999{
  z-index: 999;
}
.z1000{
  z-index: 1000;
}
/* 外边距 */
.mr10{
  margin-right: 10px;
}
.ml10{
  margin-left: 10px;
}
/* 内容溢出元素框 */
.oh{
  overflow: hidden;
}
/* 弹性盒子 超出换行*/
.flex{
  display: flex;
}
/* 两端对齐，项目之间的间隔都相等 */
.flex_s_b{
  justify-content: space-between;
}
/* 多列等高   如果子元素未设置高度或设为auto，将自动占满整个容器的高度 */
.flex_a_s{
  align-items: stretch;
}
/* Y 轴的中间对齐 */
.flex_a_c{
  align-items: center;
}
/* X 轴的中间对齐 */
.flex_j_c{
  justify-content: center;
}
/* 主轴为垂直Y方向，起点在上沿 */
.flex_d_y{
  flex-direction: column;
}
/* 垂直水平中间对齐 */
.flex_c{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 两边留白布局 */
.open_class_box{
  width: 93.6%;
  margin:0px 3.2%;
}
/* 点击效果类 */
.click_change{
  opacity: 0.6;
}
/* 元素隐藏 */
.hide{
  display: none;
}